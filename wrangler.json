{
  "$schema": "https://unpkg.com/wrangler@latest/config-schema.json",
  "name": "basedpeople",
  "main": "worker.ts",
  "compatibility_date": "2025-08-12",
  "dev": { "port": 3000 },
  "observability": { "logs": { "enabled": true } },
  "assets": { "directory": "./", "binding": "ASSETS" },
  "routes": [
    { "custom_domain": true, "pattern": "basedpeople.com" },
    { "custom_domain": true, "pattern": "www.basedpeople.com" }
  ],
  "durable_objects": {
    "bindings": [
      { "name": "APPEARANCES", "class_name": "AppearancesDB" },
      { "name": "UserDO", "class_name": "UserDO" }
    ]
  },
  "migrations": [
    { "tag": "v1", "new_sqlite_classes": ["AppearancesDB"] },
    { "tag": "v2", "new_sqlite_classes": ["UserDO"] }
  ]
}
